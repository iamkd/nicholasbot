html
  head
    title St. Nicholas Stats
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb", crossorigin="anonymous")
  body
    table.table.table-responsive
      thead
        tr
          th Номер
          th Ім'я
          th Номер пари
          th Ім'я пари
      each user in users
        - const activated = !!user.telegramId
        tr(class={"table-danger": !activated})
          td= user.count
          td= user.name
          - const pair = users.find(u => user.pairId === u.id)
          - const pairCount =  pair ? pair.count : 'Немає пари'
          - const pairName = pair ? pair.name : 'Немає пари'
          td= pairCount      
          td= pairName
